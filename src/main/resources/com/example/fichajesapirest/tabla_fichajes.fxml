<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fichajesapirest.TablaFirebaseApp">
    <!-- Estilos CSS externos -->
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <!-- ================= BARRA SUPERIOR ================= -->
    <HBox style="-fx-background-color: #2E7D32; -fx-padding: 15 20;" HBox.hgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                <Image url="@/clock-icon.png" />
            </ImageView>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 0 0 10;" text="Gestión de Fichajes" />
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="actualizarButton" onAction="#actualizarDatos" styleClass="boton-primario" text="Actualizar" />
            <Button fx:id="exportarButton" onAction="#exportarDatos" styleClass="boton-secundario" text="Exportar CSV" />
        </HBox>
    </HBox>

    <!-- ================= CONTENIDO PRINCIPAL ================= -->
    <VBox spacing="20" style="-fx-padding: 20; -fx-alignment: center;" VBox.vgrow="ALWAYS">
        <!-- Panel de búsqueda -->
        <HBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 15; -fx-pref-width: 800; -fx-alignment: center;">
            <HBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
                <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                    <Image url="@/search-icon.png" />
                </ImageView>
                <TextField fx:id="buscadorTextField" onKeyReleased="#filtrarPorFecha" prefHeight="40.0" prefWidth="750.0" promptText="Buscar por nombre o apellidos..." styleClass="buscador" />
            </HBox>
        </HBox>

        <!-- Tabla -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-pref-width: 1200; -fx-alignment: center;" VBox.vgrow="ALWAYS">
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="800.0" styleClass="custom-table">
                <columns>
                    <TableColumn fx:id="nombreCol" prefWidth="400.0" text="Nombre" />
                    <TableColumn fx:id="apellidosCol" prefWidth="400.0" text="Apellidos" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>
</VBox>
